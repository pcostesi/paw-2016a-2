{
  "name": "scrumlr",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "precommit": "npm run lint",
    "prepush": "npm run test:mvn",
    "test:mvn": "cd ../../../../.. && mvn package",
    "ng": "node ./node_modules/.bin/ng",
    "i18n": "node ./node_modules/.bin/ng xi18n -l en-us",
    "start": "node ./node_modules/.bin/ng serve",
    "build": "node ./node_modules/.bin/ng build",
    "test": "node ./node_modules/.bin/ng test",
    "lint": "node ./node_modules/.bin/ng lint",
    "e2e": "node ./node_modules/.bin/ng e2e",
    "maven": "mkdir -p dist/{en,es}; npm run build-i18n",
    "build-i18n:es":
      "node ./node_modules/.bin/ng build --output-path=dist/es -prod --i18n-file=src/locale/messages.es.xlf --i18n-format=xlf --locale=es -bh /grupo2/",
    "build-i18n:en":
      "node ./node_modules/.bin/ng build --output-path=dist/en -prod -bh /grupo2/",
    "build-i18n": "npm run build-i18n:en && npm run build-i18n:es"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^4.0.0",
    "@angular/compiler": "^4.0.0",
    "@angular/core": "^4.2.6",
    "@angular/forms": "^4.0.0",
    "@angular/http": "^4.0.0",
    "@angular/platform-browser": "^4.0.0",
    "@angular/platform-browser-dynamic": "^4.0.0",
    "@angular/router": "^4.0.0",
    "@ng-bootstrap/ng-bootstrap": "^1.0.0-alpha.27",
    "@types/jquery": "^2.0.45",
    "bootstrap": "^4.0.0-alpha.6",
    "bootswatch": "github:thomaspark/bootswatch#v4",
    "core-js": "^2.4.1",
    "crypto-js": "^3.1.9-1",
    "rxjs": "^5.4.2",
    "types": "^0.1.1",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
    "@angular/cli": "^1.2.1",
    "@angular/compiler-cli": "^4.0.0",
    "@types/bootstrap": "^3.3.35",
    "@types/core-js": "^0.9.42",
    "@types/crypto-js": "^3.1.33",
    "@types/jasmine": "2.5.38",
    "@types/jquery": "^2.0.45",
    "@types/karma": "^0.13.36",
    "@types/karma-jasmine": "^0.0.29",
    "@types/node": "~6.0.60",
    "@types/node-sass": "^3.10.32",
    "codelyzer": "~2.0.0",
    "husky": "^0.14.3",
    "jasmine-core": "~2.5.2",
    "jasmine-spec-reporter": "~3.2.0",
    "karma": "~1.4.1",
    "karma-chrome-launcher": "~2.0.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^0.2.0",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "node-sass": "^4.5.2",
    "protractor": "~5.1.0",
    "ts-node": "~2.0.0",
    "tslint": "~4.5.0",
    "typescript": "~2.3.0"
  }
}
