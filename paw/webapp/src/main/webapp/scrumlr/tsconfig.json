{
    "compileOnSave": true,
    "compilerOptions": {
        "outDir": "./dist/out-tsc",
        "baseUrl": "src",
        "sourceMap": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": false,
        "declaration": true,
        "downlevelIteration": true,
        "inlineSources": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,

        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,

        "target": "es5",
        "typeRoots": [
            "node_modules/@types",
            "typings"
        ],
        "lib": [
            "es2016",
            "dom"
        ]
    }
}